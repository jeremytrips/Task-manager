{% extends 'base.html.twig' %}

{% block title %}journal: {{task_list.title}}{% endblock %}


{% block body %}

    <div class="jumbotron">
        <h1 class="display-5">{{task_list.title}}</h1>
        <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
        <div style="justify-content: space-between; width: 60%; margin-left: 20%; display:flex">
            <div style="margin-left: 025px;">
                <p>Date created {{task_list.dateCreated | date('d/m/Y') }}</p>
            </div>
            <div style="margin-right: 025px;">
                <p>Last update: {{task_list.dateModified | date('d/m/Y') }}</p>
            </div>
        </div>
    </div>
    <div>
        {% for task in task_list.Tasks %}
            <div style="display: flex; border: thin solid; margin: 10px; border-color: red; padding-left: 10px;">
                <p style="flex: 0.70;"> {{task.Description}} </p>
                <p style="flex: 0.20;"> {{task.DateCreated | date('d/m/Y')}} </p>
                {% if task.IsDone %}
                    <input type="checkbox" checked style="flex: 0.10; align-self: center;" />
                {% else %}
                    <input type="checkbox" style="flex: 0.10; align-self: center;" />
                {% endif %}
                
            </div>
        {% else %}
            <h3> No tasks yes </h3>
        {% endfor %}
    </div>
{% endblock %}
